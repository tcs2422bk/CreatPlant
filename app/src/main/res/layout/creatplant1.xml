<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:src="@drawable/dog"
        android:layout_width="match_parent"
        android:layout_height="300sp" />
    <TextView
        android:text="Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CreatPlant1_name"/>

    <TextView
        android:text="Birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CreatPlant1_birthday"/>

    <TextView
        android:text="Note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CreatPlant1_note"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CreatPlant1_back"
            android:text="Back"
            android:layout_weight="1"
            android:layout_marginLeft="58sp"
            android:layout_marginRight="18sp"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CreatPlant1_next"
            android:text="Next"
            android:layout_weight="1"
            android:layout_marginLeft="18sp"
            android:layout_marginRight="58sp"
            />
    </LinearLayout>
</LinearLayout>
